{% include 'components/blog/header.twig' %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-offset-3 col-sm-6 box">
            <div class="box-title">
                Recover your account
            </div>
            {% include 'components/blog/alerts.twig' %}
            <form action="{{ path_for('actionRecover') }}" method="post">
                <div class="form-group">
                    <label for="email" class="label-custom">Email Address</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Please enter your email address">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-custom-primary btn-complete">Continue</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% include 'components/blog/footer.twig' %}