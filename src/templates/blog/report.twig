{% include 'components/blog/header.twig' %}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-offset-2 col-sm-8 box">
            <div class="box-title">
                Report posts
            </div>
            {% include 'components/blog/alerts.twig' %}
            <form action="{{ path_for('actionReport') }}" method="post">
                <div class="form-group">
                    <label for="link" class="label-custom">Link to report</label>
                    <input type="url" name="link" class="form-control" id="link" placeholder="Please enter the link you want to report">
                </div>
                <div class="form-group">
                    <label for="email" class="label-custom">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email address">
                </div>
                <div class="form-group">
                    <label for="message" class="label-custom">Message</label>
                    <textarea name="message" id="message" class="form-control" style="height: 100px;" placeholder="Enter your message"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-custom-primary btn-complete">Continue</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% include 'components/blog/footer.twig' %}