{% include 'components/blog/header.twig' %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-offset-3 col-sm-6 box">
            <div class="box-title">
                Reset your account password
            </div>
            {% include 'components/blog/alerts.twig' %}
            <form action="{{ path_for('actionRecoverPassword') }}" method="post">
                <div class="form-group">
                    <label for="password" class="label-custom">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Chose a new password">
                </div>
                <div class="form-group">
                    <label for="conf_password" class="label-custom">Confirm Password</label>
                    <input type="password" class="form-control" name="conf_password" id="conf_password" placeholder="Confirm your password">
                </div>
                <div class="form-group">
                    <input type="hidden" value="{{ hash }}" name="hash">
                    <button type="submit" class="btn btn-custom-primary btn-complete">Continue</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% include 'components/blog/footer.twig' %}