    <meta name="description" content="{{ app.config.get('blogDescription') }}">
    <meta name="keywords" content="{{ app.config.get('blogKeywords') }}">
    <link href="{{ url }}/resources/blog/css/bootstrap.min.css" rel="stylesheet" type="text/css">
