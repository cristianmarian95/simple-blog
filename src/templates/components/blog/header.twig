        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '{{ app.config.get('googleAnalytics') }}');
    </script>
    {% endif %}
    <title>{{ app.config.get('blogTitle') }}</title>
